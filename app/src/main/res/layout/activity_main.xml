<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f44336"
    tools:context="com.madlion.benimtercihim.MainActivity"
    android:orientation="vertical">


<ImageView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:src="@mipmap/uygulama_logom"

    />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#f45347"
        android:textColor="@color/primary_light"
        android:id="@+id/kullanici"
        android:hint="@string/kullaniciadi"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColorHint="@color/primary_light" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/primary_light"
        android:background="#f45347"
        android:id="@+id/sifre"
        android:hint="@string/sifre"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/primary_light"
        android:password="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/primary_light"
        android:text="@string/str_giris"
        android:id="@+id/btn_giris"
        android:background="@drawable/androidbuttonshapes"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/primary_light"
        android:text="@string/uyesizdevam"
        android:id="@+id/devamet"
        android:layout_marginTop="30dp"
        android:background="@drawable/androidbuttonshapes"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:textColor="@color/primary_light"
            android:text="@string/yeniuye"
            android:id="@+id/yeniuye"
            android:background="@drawable/androidbuttonshapes"
             />

        <Button
            android:layout_width="150dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_light"
            android:text="@string/sifrehatirla"
            android:id="@+id/sifrehatirla"
            android:background="@drawable/androidbuttonshapes"
            />
    </LinearLayout>

</LinearLayout>
